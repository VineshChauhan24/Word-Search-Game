<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.paperplanes.wordsearch">

    <application
        android:name=".WordSearchApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".presentation.ui.activity.SettingsActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".presentation.ui.activity.GamePlayActivity">
        </activity>
        <activity android:name=".presentation.ui.activity.MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.ui.activity.FinishActivity">
        </activity>
    </application>

</manifest>